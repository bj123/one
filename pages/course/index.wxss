.slide-image {
    background: #000;
}

.parenting .item button {
    padding: 0;
    margin: 0;
    background-color: #fff;
    text-align: left;
    line-height: inherit;
    border-radius: 0;
}

.parenting .item button.hover {
    opacity: .6;
}

.parenting .item button.hover::after {
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
    background-color: rgba(0,0,0,.1);
}

.parenting .item button::after {
    border: 0;
    border-radius: 0;
}