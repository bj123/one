@import "../wxParse/wxParse.wxss";

.unlock_cover {
    height: 432rpx;
}

.label {
    position: absolute;
    top: 26px;
    left: 0;
    line-height: 54rpx;
    background: #333;
    opacity: 0.7;
    color: #ffffff;
    font-size: 22rpx;
    border-top-right-radius: 27rpx;
    border-bottom-right-radius: 27rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
    opacity: 0;
}

.synopsis-option .a {
    width: 50%;
}

.button_view {
    position: fixed;
    bottom: 0;
    left: 0;
    height: 98rpx;
    line-height: 98rpx;
    width: 100%;
    display: flex;
    z-index: 990;
}

.button_view .b {
    flex: 1;
    text-align: center;
    font-size: 30rpx;
}

.button_view .st {
    color: #333333;
    background: #fff;
}

.button_view .st image {
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
}

.button_view .unlock {
    color: #fff;
    background: #fc6261;
}

.button_view .unlock image {
    width: 30rpx;
    height: 37rpx;
    vertical-align: middle;
}

.button_view .st text,.unlock text {
    vertical-align: middle;
    margin-left: 22rpx;
}

.screen .bj {
    z-index: 999;
    position: fixed;
    top: 0;
    left: 0;
    height: 100%;
    width: 100%;
    background: #000;
    opacity: 0.7;
}

.screen .main {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 999;
}

.unlock_success {
    width: 620rpx;
    padding-bottom: 40rpx;
    background: #fff;
    border-radius: 10rpx;
}

.unlock_success .c {
    text-align: center;
}

.unlock_success .header {
    height: 92rpx;
    line-height: 92rpx;
    font-weight: 500;
    text-align: center;
    font-size: 36rpx;
    color: white;
    background: #fc6262;
    border-top-right-radius: 10rpx;
    border-top-left-radius: 10rpx;
    position: relative;
}

.unlock_success .header .close {
    width: 80rpx;
    height: 100rpx;
    position: absolute;
    right: 10rpx;
    top: 0;
}

.unlock_success .header image {
    width: 28rpx;
    height: 28rpx;
}

.unlock_success .h1 {
    font-size: 30rpx;
    color: #ff3636;
    margin-top: 50rpx;
    font-weight: 500;
}

.unlock_success .h2 {
    font-size: 30rpx;
    color: #000000;
    margin-top: 8rpx;
    font-weight: 500;
}

.unlock_success .h3 {
    font-size: 20rpx;
    color: #999999;
    margin-top: 36rpx;
}

.unlock_success .button {
    height: 80rpx;
    line-height: 80rpx;
    width: 540rpx;
    margin: 0 auto;
    margin-top: 14rpx;
    border: 2rpx solid #fc6262;
    border-radius: 10rpx;
    box-sizing: border-box;
    display: flex;
}

.unlock_success .button .text {
    flex: 1;
    font-size: 22rpx;
    color: #333333;
}

.unlock_success .button .text .wechat {
    width: 34rpx;
    height: 28rpx;
    margin: 0 20rpx;
    vertical-align: middle;
}

.unlock_success .button .copy {
    width: 140rpx;
    text-align: center;
    color: #ffffff;
    font-size: 30rpx;
    background: #fc6262;
}