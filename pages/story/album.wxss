@import "../wxParse/wxParse.wxss";

.album-detail {
    position: relative;
    padding-left: 15px;
    border-bottom: 10px solid #f5f5f5;
}

.album-detail .album-gift {
    top: 50%;
    transform: translateY(-50%);
}

.album-detail .album-title {
    padding-right: 105px;
}

.album-detail .album-title .title {
    font-size: 15px;
    color: #484848;
    margin: 8px 0px;
}

.album-detail .album-title .price {
    color: #fd6363;
    font-size: 15px;
    padding-bottom: 5px;
}

.album-detail .album-title .price text {
    font-size: 17px;
    color: #fd6363;
    margin-right: 2px;
    font-weight: 500;
}

.album-buy {
    text-align: center;
    line-height: 96rpx;
}

.album-buy>view>image {
    width: 30rpx;
    height: 30rpx;
    vertical-align: middle;
}

.album-buy>view>text {
    font-size: 28rpx;
    color: #666;
    margin-left: 10rpx;
}

.common-mask {
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background-color: rgba(0,0,0,0.5);
    overflow: hidden;
    z-index: 999;
    color: #fff;
}

.common-mask .position-box {
    position: absolute;
    top: 35%;
    left: 75rpx;
    width: 600rpx;
    height: 400rpx;
    padding-top: 70rpx;
    background-color: #FFF;
}

.common-mask .position-box>text {
    width: 600rpx;
    display: inline-block;
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
    line-height: 51rpx;
    text-align: center;
}

.common-mask .position-box>view {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 600rpx;
    height: 150rpx;
    font-size: 40rpx;
    font-weight: bold;
    background-color: #111;
    color: #fff;
    text-align: center;
    line-height: 150rpx;
}