.topbar {
    position: relative;
    height: 300rpx;
    overflow: hidden;
}

page {
    background: #f5f5f5;
}

.topbar .img_bar {
    width: 750rpx;
    height: 400rpx;
    vertical-align: middle;
}

.top_user {
    position: absolute;
    top: 80rpx;
    left: 30rpx;
    font-size: 13px;
    width: 495rpx;
    height: 32px;
}

.top_user swiper {
    height: 72px;
}

.top_user swiper-item {
    padding: 15px 0px;
    box-sizing: border-box;
}

.top_user .pupo-list {
    position: absolute;
    top: 0;
    left: 0;
    background: rgba(0,0,0,0.5);
    color: #fff;
    vertical-align: middle;
    border-radius: 3px;
    height: 60rpx;
    line-height: 60rpx;
    box-sizing: 16px;
    margin: 0;
    padding-right: 10rpx;
    max-width: 490rpx;
}

.top_user .head_img {
    width: 46rpx;
    height: 46rpx;
    float: left;
    margin: 8rpx 8rpx 0 8rpx;
}

.guize {
    position: absolute;
    bottom: 155rpx;
    right: 0;
    color: #fff;
    background: #f5494d;
    font-size: 26rpx;
    padding: 16rpx 28rpx 16rpx 37rpx;
    border-top-left-radius: 20px;
    border-bottom-left-radius: 20px;
}

.date {
    margin: 0 auto;
    position: absolute;
    transform: translate(-50%,-50%);
    left: 50%;
    text-align: center;
    width: 597rpx;
    height: 168rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    background: url('https://wx.cunzhanggushi.com/public/images/bg_1.png') no-repeat;
    background-size: cover;
}

.date .invited {
    color: #f5494d;
    font-size: 32rpx;
}

.date .invited_date {
    color: #999;
    font-size: 9px;
    margin-top: 8px;
}

.invite_remmber {
    width: 100%;
    background: #f5494d;
    padding: 46rpx 28rpx 40rpx 28rpx;
    box-sizing: border-box;
}

.invite_remmber .remmber_wrap {
    min-height: 196rpx;
    background: #fff;
    padding-top: 80rpx;
    padding-bottom: 60rpx;
    text-align: center;
}

.invite_remmber .remmber_wrap .remmber_box {
    padding-bottom: 28px;
    text-align: center;
}

.invite_remmber .remmber_wrap .remmber_box view {
    margin: 3px 7px;
    position: relative;
    display: inline-block;
}

.invite_remmber .remmber_wrap .remmber_box view .icon-tuan {
    position: absolute;
    width: 51rpx;
    height: 30rpx;
    bottom: 0px;
    right: -7px;
    background: url('https://wx.cunzhanggushi.com/public/images/tuan.png') no-repeat center;
    background-size: 51rpx 30rpx;
}

.invite_remmber .remmber_wrap .remmber_box .head_imgs {
    width: 102rpx;
    height: 102rpx;
    border-radius: 50%;
    border: 1px solid #dcdcdc;
}

.invite_remmber .remmber_wrap .remmber_box .no-member {
    border: 1px dashed #dcdcdc;
}

.invite_remmber .remmber_wrap .remmber_box .active {
    border: 1px dashed #e0e0e0;
    width: 102rpx;
    height: 102rpx;
    border-radius: 50%;
    text-align: center;
    line-height: 102rpx;
    color: #e0e0e0;
    font-size: 18px;
}

.invite_cha {
    text-align: center;
    font-size: 14px;
}

.invite_cha .invite_sum {
    color: #fd8282;
    margin: 0px 5px;
}

.end-time {
    font-size: 14px;
    color: #999;
    text-align: center;
    margin-top: 5px;
    margin-bottom: 15px;
}

.wei_friend {
    text-align: center;
    background: #f5494d;
    width: 562rpx;
    height: 78rpx;
    margin: 0 auto;
    border-radius: 18px;
    color: #fff;
    line-height: 78rpx;
    margin-bottom: 20rpx;
    font-size: 16px;
}

.wei_friend .weixin-icon {
    width: 40rpx;
    height: 34rpx;
    margin-right: 5px;
    background: url('https://wx.cunzhanggushi.com/public/images/weixin.png') no-repeat;
    background-size: cover;
}

.shi_ting {
    text-align: center;
    width: 562rpx;
    height: 78rpx;
    margin: 0 auto;
    border-radius: 18px;
    color: #fff;
    line-height: 78rpx;
    margin-bottom: 20rpx;
    border: 1px solid #e0e0e0;
}

.shi_ting .bofang-icon {
    width: 40rpx;
    height: 40rpx;
    vertical-align: middle;
    margin-right: 10rpx;
    background: url('https://wx.cunzhanggushi.com/public/images/bofang.png') no-repeat center;
    background-size: 40rpx 40rpx;
}

.tab_type {
    margin-top: 10px;
    height: 45px;
    border-bottom: 1px solid #dcdcdc;
    background: #fff;
}

.tab_type .a {
    font-size: 14px;
    text-align: center;
    display: inline-block;
    width: 50%;
    height: 44px;
    line-height: 45px;
    color: #333;
}

.tab_type .a.active {
    border-bottom: 2px solid #f5494d;
    margin-bottom: -1px;
    color: #f5494d;
}

.detail {
    background: #f5f5f5;
    padding: 0px 37px 0px 14px;
}

.detail .title {
    color: #333;
    font-weight: bold;
    font-size: 14px;
    padding: 45rpx 0;
}

.detail .detail-content {
    font-size: 13px;
    line-height: 23px;
    letter-spacing: 1px;
}

.icon-success {
    position: absolute;
    width: 140rpx;
    height: 120rpx;
    top: 320rpx;
    z-index: 3;
    right: 100rpx;
    background: url('https://wx.cunzhanggushi.com/public/images/success.png') no-repeat center;
    background-size: 140rpx 120rpx;
}

.icon-fail {
    background: url('https://wx.cunzhanggushi.com/public/images/icon-fail.png') no-repeat center;
    background-size: 140rpx 120rpx;
}

.no_success {
    background: #ccc;
}

.no_success:after {
    border: none;
}

.new_group {
    background: #ffa838;
}

.guize_modal {
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 100;
    background: rgba(0,0,0,0.5);
}

.guize_modal.no_bg {
    background: transparent;
}

.guize_modal .guize_box {
    position: relative;
    height: 100%;
}

.guize_modal .guize_content {
    margin: 0 auto;
    width: 583rpx;
    top: 50%;
    transform: translateY(-50%);
    position: relative;
}

.guize_modal .guize_content.tip {
    width: 70%;
}

.guize_modal .guize_content .icon-close {
    position: absolute;
    right: 0px;
    top: -35px;
    width: 26px;
    height: 26px;
}

.guize_modal .guize_content .guize_wrap {
    background: #fff;
    border-radius: 6px;
    padding: 15px;
}

.guize_modal .guize_content .guize_wrap.bg_black {
    background: rgba(0,0,0,0.8);
    padding: 5px 20px;
}

.guize_modal .guize_content .guize_wrap .title {
    text-align: center;
    margin: 3px 0px 15px 0px;
    font-size: 32rpx;
    color: #fd6363;
}

.guize_modal .guize_content .guize_wrap .title icon {
    width: 27%;
    height: 1px;
    margin-bottom: 5px;
}

icon.left {
    margin-right: 5px;
    background: linear-gradient(to left,#fd6363,#fff);
}

icon.right {
    margin-left: 5px;
    background: linear-gradient(to right,#fd6363,#fff);
}

.guize_wrap_detail {
    font-size: 13px;
    line-height: 23px;
}